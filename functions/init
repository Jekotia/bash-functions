#! /bin/bash

#-> PRIMARY INITIALISATION SYSTEM FOR ALL SCRIPTS

# Root directory containing this repos' file structure
_ROOT="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

#-> SOURCE CORE FUNCTION FILES
# shellcheck source=./debug
source "${_ROOT}/debug"
# shellcheck source=./funcStart
source "${_ROOT}/funcStart"
# shellcheck source=./funcEnd
source "${_ROOT}/funcEnd"
# shellcheck source=./errcho
source "${_ROOT}/errcho"
# shellcheck source=./loader
source "${_ROOT}/loader"

#-> CALL THE LOADER ON THE PROJECT ROOT
loader "${_ROOT}" "0" "*.sh"

debug "end ${_ROOT}/init"
